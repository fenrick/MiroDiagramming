{
  "name": "fenrick-miro-app",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "engines": {
    "node": ">=20"
  },
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only src/server.ts",
    "build": "vite build && tsc -p tsconfig.json",
    "start": "node dist/server.js",
    "migrate:deploy": "prisma migrate deploy",
    "migrate:dev": "prisma migrate dev",
    "typecheck": "tsc --noEmit",
    "typecheck:client": "tsc -p tsconfig.client.json --noEmit",
    "lint": "eslint \"src/{app,config,miro,routes,queue,services,repositories}/**/*.ts\"",
    "format": "prettier --check .",
    "format:write": "prettier --write .",
    "test": "vitest run",
    "coverage": "c8 -r lcov -r text-summary npm run test",
    "postinstall": "prisma generate",
    "prepare": "husky",
    "commitlint": "commitlint"
  },
  "dependencies": {
    "@fastify/cookie": "^9.3.1",
    "@fastify/cors": "^11.1.0",
    "@fastify/middie": "^9.0.2",
    "@fastify/static": "^8.2.0",
    "@mirohq/design-system": "^1.0.23",
    "@mirohq/miro-api": "^2.2.4",
    "@mirohq/websdk-react-hooks": "^0.0.3",
    "@opentelemetry/api": "^1.9.0",
    "@prisma/client": "^6.16.0",
    "@stitches/react": "^1.2.8",
    "d3-dsv": "^3.0.1",
    "elkjs": "^0.10.0",
    "exceljs": "^4.4.0",
    "fastify": "^5.6.0",
    "fastify-raw-body": "^4.3.0",
    "logfire": "^0.9.0",
    "marked": "^12.0.2",
    "pino": "^9.4.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-dropzone": "^14.3.8",
    "safe-regex": "^2.1.1",
    "zod": "^3.23.8",
    "zustand": "^5.0.0"
  },
  "devDependencies": {
    "@commitlint/config-conventional": "^19.8.1",
    "@mirohq/websdk-types": "^2.9.0",
    "@types/node": "^20.11.30",
    "@types/react": "^18.3.23",
    "@types/react-dom": "^18.3.7",
    "@types/safe-regex": "^1.1.6",
    "@types/supertest": "^2.0.16",
    "@typescript-eslint/eslint-plugin": "^8.8.1",
    "@typescript-eslint/parser": "^8.8.1",
    "@vitejs/plugin-react": "^5.0.2",
    "c8": "^9.1.0",
    "commitlint": "^19.8.1",
    "eslint": "^9.35.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "husky": "^9.1.7",
    "pino-pretty": "^11.2.2",
    "prettier": "^3.6.2",
    "prisma": "^6.16.0",
    "supertest": "^7.0.0",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.5.4",
    "typescript-eslint": "^8.43.0",
    "vite": "^6.3.5",
    "vitest": "^3.2.4"
  }
}
