# Backend
NODE_ENV=development
PORT=3000
DATABASE_URL=file:./app.db

# Cookie/session
SESSION_SECRET=change-me-in-production

# Miro OAuth
MIRO_CLIENT_ID=
MIRO_CLIENT_SECRET=
MIRO_REDIRECT_URL=http://localhost:3000/auth/miro/callback

# Webhook signature
MIRO_WEBHOOK_SECRET=change-me
STATIC_ROOT=

# CORS (JSON array or comma-separated list)
CORS_ORIGINS=["http://localhost:3000"]

# Idempotency cleanup (seconds)
MIRO_IDEMPOTENCY_CLEANUP_SECONDS=86400

# Change queue tuning
QUEUE_CONCURRENCY=2
QUEUE_MAX_RETRIES=5
QUEUE_BASE_DELAY_MS=250
QUEUE_MAX_DELAY_MS=5000
