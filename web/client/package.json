{
  "name": "fenrick.miro.client",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "description": "Miro diagramming plugin template",
  "keywords": [
    "React",
    "TypeScript",
    "Miro Web SDK",
    "Vite"
  ],
  "license": "Unlicense",
  "engines": {
    "node": ">=20 <21"
  },
  "scripts": {
    "dev": "vite",
    "start": "vite",
    "generate-client": "tsx ../../scripts/generate-client.ts",
    "build": "npm run generate-client || echo 'using snapshot'; vite build --outDir dist",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "preview": "vite preview",
    "prettier": "prettier '**/*.{js,jsx,ts,tsx,md,json,yml,yaml,html,css}' --write",
    "prettier:check": "prettier '**/*.{js,jsx,ts,tsx,md,json,yml,yaml,html,css}' --check",
    "typecheck": "tsc --noEmit",
    "pretest": "npm install",
    "test": "vitest run --coverage",
    "test-shard": "vitest run --coverage",
    "stylelint": "stylelint 'src/**/*.css'",
    "build-storybook": "storybook build",
    "semantic-release": "semantic-release",
    "commitlint": "commitlint --color",
    "storybook": "storybook dev -p 6006"
  },
  "dependencies": {
    "@mirohq/design-system": "^1.0.23",
    "@stitches/react": "^1.2.8",
    "d3-dsv": "^3.0.1",
    "elkjs": "^0.10.0",
    "exceljs": "^4.4.0",
    "logfire": "^0.9.0",
    "@opentelemetry/api": "^1.9.0",
    "@mirohq/websdk-react-hooks": "^0.0.3",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-dropzone": "^14.3.8",
    "safe-regex": "^2.1.1",
    "zustand": "^5.0.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@mirohq/websdk-types": "^2.16.1",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@storybook/addon-docs": "^8",
    "@storybook/addon-essentials": "^8.6.14",
    "@storybook/addon-links": "^8.6.14",
    "@storybook/addon-viewport": "^8",
    "@storybook/blocks": "^8",
    "@storybook/react-vite": "^8.6.14",
    "@testing-library/dom": "^10.4.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/d3-dsv": "^3.0.7",
    "@types/node": "^24.1.0",
    "@types/react": "^18.3.23",
    "@types/react-dom": "^18.3.7",
    "@typescript-eslint/eslint-plugin": "^8",
    "@typescript-eslint/parser": "^8",
    "@vitejs/plugin-react": "^4.7.0",
    "@vitest/coverage-istanbul": "^3.2.4",
    "eslint": "^9.31.0",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "husky": "^9.1.7",
    "jsdom": "^26.1.0",
    "prettier": "^3.6.2",
    "semantic-release": "^24.2.7",
    "storybook": "^8.6.14",
    "stylelint": "^16.22.0",
    "stylelint-config-standard": "^38.0.0",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.38.0",
    "vite": "^6.3.6",
    "vitest": "^3.2.4",
    "openapi-typescript": "^7.9.1",
    "tsx": "^4.20.4"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  }
}
